<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <script src="https://kit.fontawesome.com/3f1f47ed70.js" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="{{asset('css/style.css')}}">

        {% endblock %}

        {% block javascripts %}

     {#       {{encore_entry_link_tags('app')}}
           {{encore_entry_script_tags('app')| replace({'src=', 'defer src='}) | raw}} #}


        



            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="{{ asset('js/script.js')}}"></script>
        {% endblock %}
     </head>
    <body>
        <div class="container mt-4" id="wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
       
                   {#  if app.user = use user is logged in #}
                    <li class="nav-item"><a class="nav-link" href="{{path('app_home')}}">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{path('app_location')}}">Our locations</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{path('app_service')}}">Our shoots</a></li> 
                    <li class="nav-item"><a class="nav-link" href="{{path('app_user')}}">Was members</a></li>
                    
                   {% if app.user %} 
                        <li class="nav-item"><a class="nav-link" href="{{path('app_logout')}}">Log out</a></li>
                  {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{path('app_login')}}">Log in</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{path('app_register')}}">Create account</a></li>
                   
                 {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="">Admin Panel</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_PHOTOGRAPHER') or is_granted('ROLE_HOST') or is_granted('ROLE_HOST')%}
                        <li class="nav-item"><a class="nav-link" href="{{path('show_user', {'id': app.user.id})}}">My Profile</a></li>
                    {% endif %}
  
                  
                   
                  
                </ul>
            </div>

            

            </nav> 
       
            {% block body %} 
           
            
            
            {% endblock %}
             
        </div>

         <script type="text/javascript">
     /*    (tarteaucitron.job = tarteaucitron.job || []).push('youtube'); */
        </script>
    </body>
</html>
