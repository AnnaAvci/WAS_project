{% block title %}Admin: Photoshoots {% endblock %}

{% block body %}
<table class="table table-striped">
        <tr>
            <td>Service</td>
            <td>Actions</td>
        </tr>
        {% for service in services %}
            <tr>
                <td style="width:10%">   
                    <a href="{{ path('show_service', {'id': service.id }) }}">
                    <div class="card-and-desc" style="width: 10rem">
                        <div class="card" style="width: 10rem">
                            <img src={{ asset("img/" ~ service.photoServices[0].namePhoto )}} alt="Service" style="width: 7rem; height:7rem;"/>
                        </div>
                        <h3 class="h3">
                            {{service.nameService}}
                            <br />
                            {{service.priceService}} $ per hour
                        </h3>
                    </div>
                    </a>
                </td>
                <td>
                    <a href="{{path('admin_update_service', {'id': service.id})}}">Update</a>
                    <a href="{{path('admin_delete_service', {'id': service.id})}}">Delete</i></a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}

