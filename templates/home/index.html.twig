{% extends 'base.html.twig' %}

{% block title %}Welcome to WAS!{% endblock %}

{% block body %}

        {{ form_start(formSearch) }}

        <div class="searchField">
         <button class="btn-search" href="path('app_home')}}"><i class="fa-solid fa-arrows-rotate"></i></button>
                <div class="search-row-q">{{ form_row(formSearch.q) }}</div>
                <div id="price-search">
                    <div class="price-search-row">{{ form_row(formSearch.min) }}</div>
                    <div class="price-search-row"> {{ form_row(formSearch.max) }}</div>
                </div>
                <div class="search-row-country">{{ form_row(formSearch.countryLocation) }}</div>
            
                <button type="submit" class="btn-search"><i class="fa-solid fa-magnifying-glass"></i></button>
               
            </div>
            {{ form_end(formSearch) }}
        

        <section class="all-cards"> 
            {% include "home/_locations.html.twig" %}
        </section> 
 
{% endblock %}
