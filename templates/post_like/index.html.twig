{% extends 'base.html.twig' %}

{% block title %}Favourites{% endblock %}

{% block body %}
	
		{% if services | length > 0 %}
			<h2 class="margin-left">Favourite photoshoots</h2>
		{% endif %}
		<div class="all-cards">
		{% for service in services %}
			
			
			<a href="{{ path('show_service', {'id': service.id }) }}">
				<div class="card-and-desc">
					<div class="card">
						<img src={{ asset("uploads/" ~ service.photoServices[0].namePhoto )}} alt="service" />
					</div>
					<h3 class="h3">
						{{service.nameService}}
						<br />
						{{service.priceService}} $ per hour
						<a href="{{path("service_like", {'id': service.id})}}" class="btn btn-link js-like">
							<span class="js-likes">{{service.likes | length }}</span>

							{% if app.user and service.isLikedByUser(app.user) %}
								<i class="fa-solid fa-heart"></i>
							{% else %}
								<i class="fa-regular fa-heart"></i>
							{% endif %}
						</a>
					</h3>
				</div>
			</a> 
		
		{% endfor %}
	</div>
		{% if locations | length > 0 %}
			<h2 class="margin-left">Favourite locations</h2>
		{% endif %}
		<div class="all-cards">
		{% for location in locations %}
			
			
			<a href="{{ path('show_location', {'id': location.id }) }}">
				<div class="card-and-desc">
					<div class="card">
						<img src={{ asset("uploads/" ~ location.photoLocations[0].namePhoto )}} alt="location" />
					</div>
					<h3 class="h3">
						{{location.nameLocation}}
						<br />
						{{location.priceLocation}} $ per hour
						<a href="{{path("location_like", {'id': location.id})}}" class="btn btn-link js-like">
							<span class="js-likes">{{location.likes | length }}</span>

							{% if app.user and location.isLikedByUser(app.user) %}
								<i class="fa-solid fa-heart"></i>
							{% else %}
								<i class="fa-regular fa-heart"></i>
							{% endif %}
						</a>
					</h3>
				</div>
			</a> 
		
		{% endfor %}
	</div>

{% endblock %}
